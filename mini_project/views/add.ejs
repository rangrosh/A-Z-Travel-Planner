<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <link rel="stylesheet" href="./cssfiles/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Roboto:ital,wght@1,700&family=Sacramento&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <title>CodeGig</title>
</head>

<body>

  <section id="add">
    <div class="add_background"></div>
    <div class="form-wrap">
      <h1>Add Cab Driver</h1>
      <p>Your contact number will be shared to the customers</p>
      <% if (typeof a !== 'undefined' && a == "Add Cab") {%>
        <% errors.forEach(err => {%>
          <div class="error">
            <p><%=err%></p>
          </div>
        <%})%>
      <%}%>
      <form action="/add" method="post">
        <div class="input-group">
          <label for="title">Name</label>
          <input type="text" name="driver_name" class="input-box" value="<%=values[0]%>" maxlength="100">
        </div>
        <div class="input-group">
          <label >Location</label>
          <input type="text" name="cities_City_Name" class="input-box" value="<%=values[1]%>" maxlength="100">
        </div>
        <div class="input-group">
          <label >Phone Number</label>
          <input type="text" name="phone_number" value="<%=values[2]%>" class="input-box">
        </div>
        <input type="submit" value="Add Cab" name="add" class="btn btn-secondary">
      </form>
    </div>


    <div class="form-wrap">
      <h1>Add a Hotel</h1>
      <p>Your hotel contact number will be shared to the customers</p>
      <% if (typeof a !== 'undefined' && a == "Add Hotel") {%>
        <% errors.forEach(err => {%>
          <div class="error">
            <p><%=err%></p>
          </div>
        <%})%>
      <%}%>
      <form action="/add" method="post">
        <div class="input-group">
          <label for="title">Name of the hotel</label>
          <input type="text" name="hotel_name" class="input-box" value="<%=values[3]%>" maxlength="100">
        </div>
        <div class="input-group">
          <label >Location</label>
          <input type="text" name="cities_City_Name" class="input-box" value="<%=values[4]%>" maxlength="100">
        </div>
        <div class="input-group">
          <label >Phone Number</label>
          <input type="text" name="phone_number" value="<%=values[5]%>" class="input-box">
        </div>
        <div class="input-group">
          <label >Average rating of your hotel</label>
          <input type="text" name="average_user_review" value="<%=values[6]%>" class="input-box" placeholder="Rating out of 5">
        </div>
        <input type="submit" value="Add Hotel" name="add" class="btn btn-secondary">
      </form>
    </div>


    <div class="form-wrap">
      <h1>Add a Restaurant</h1>
      <p>Your restaurant contact number will be shared to the customers</p>
      <% if (typeof a !== 'undefined' && a == "Add Restaurant") {%>
        <% errors.forEach(err => {%>
          <div class="error">
            <p><%=err%></p>
          </div>
        <%})%>
      <%}%>
      <form action="/add" method="post">
        <div class="input-group">
          <label for="title">Name of the restaurant</label>
          <input type="text" name="restaurant_name" value="<%=values[7]%>" class="input-box" maxlength="100">
        </div>
        <div class="input-group">
          <label >Location</label>
          <input type="text" name="cities_City_Name" value="<%=values[8]%>" class="input-box" maxlength="100">
        </div>
        <div class="input-group">
          <label >Is it a vegetarian restaurant</label>
          <input type="text" name="is_vegetarian" value="<%=values[9]%>" class="input-box" maxlength="100" placeholder="If yes type 'y' else type 'n'">
        </div>
        <div class="input-group">
          <label >Phone Number</label>
          <input type="text" name="phone_number" value="<%=values[10]%>" class="input-box">
        </div>
        <div class="input-group">
          <label >Opening Time of restaurant</label>
          <input type="text" name="opening_time" value="<%=values[11]%>" class="input-box" placeholder="Eg. 23:00:00 (hr:min:sec)">
        </div>
        <div class="input-group">
          <label>Closing Time of restaurant</label>
          <input type="text" name="closing_time" value="<%=values[12]%>" class="input-box" placeholder="Eg. 23:00:00 (hr:min:sec)">
        </div>
        <div class="input-group">
          <label >Average rating of your restaurant</label>
          <input type="text" name="average_user_review_restaurants" value="<%=values[13]%>" class="input-box" placeholder="Rating out of 5">
        </div>
        <input type="submit" value="Add Restaurant" name="add" class="btn btn-secondary">
      </form>
    </div>

  </section>
</body>

</html>
