<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="./cssfiles/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Roboto:ital,wght@1,700&family=Sacramento&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<body>
  <div class="train_frame"></div>

  <form class="form-signin" action="/trains_list" method="post">

    <div class="train_main">

      <div class="text-center mb-4">
        <img class="mb-4" src="./images/tourist_places.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Trians</h1>
        <p>Search for trains</p>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">Choose your current location</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="from">
          <option selected>Choose...</option>
          <% results.forEach(result=> { %>
            <% var city = result.starting_state%>
            <option value="<%=result.starting_state%>"> <%=city.charAt(0).toUpperCase()+city.slice(1)%></option>
          <%})%>
        </select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">Choose your final destination</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="to">
          <option selected>Choose...</option>
          <% results.forEach(result=> { %>
            <% var city = result.starting_state%>
            <option value="<%=result.starting_state%>"><%=city.charAt(0).toUpperCase()+city.slice(1)%></option>
        <%})%>
        </select>
      </div>

      <button class="btn btn-lg btn-dark btn-block" type="submit" name="button">Search</button>

    </div>

  </form>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>

</html>
